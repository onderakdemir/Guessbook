<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GuessBook</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,500,600,700,700i|Montserrat:300,400,500,600,700" rel="stylesheet" asp-append-version="true" />

    <!-- Bootstrap CSS File -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />

    <!-- Libraries CSS Files -->
    <link href="~/lib/fontawesome/fontawesome-free-5.12.0-web/css/all.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/ion.rangeSlider/ion.rangeSlider.min.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/notification/toastr.min.css" rel="stylesheet" asp-append-version="true" />


    <!-- Main Stylesheet File -->
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/loader.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/optionsStyles.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/SortableBoxes.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/errorPage.css" rel="stylesheet" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div>
        <partial name="_HeaderPartial" />
    </div>
    <div class="container-fluid" id="main">
        <main role="main">
            @RenderBody()
        </main>
        <a href="#" class="back-to-top"><i class="fa fa-chevron-up"></i></a>
    </div>
    <div class="loaderModal"></div>
    <footer class="border-top footer text-muted bg-dark">
        <div class="container text-light">
            &copy; 2020 - GuessBook -
            <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-light ">
                <span>Privacy</span>
            </a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery-3.5.1.min.js" asp-append-version="true"></script>
    <script src="~/js/ion.rangeSlider-js/ion.rangeSlider.min.js" asp-append-version="true"></script>
    <script src="~/js/notification/toastr.min.js" asp-append-version="true"></script>
    <script src="~/js/notification/notifications.js" asp-append-version="true"></script>
    <script src="~/js/loader.js" asp-append-version="true"></script>
    <script src="~/js/sendOptions.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery/dist/touch-dnd.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/expiredTimeCounter.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
